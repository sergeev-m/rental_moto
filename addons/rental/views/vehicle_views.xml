        <sheet>
          
          <div class="oe_title">
            <h1><field name="name"/></h1>
          </div>

          <group>
            <group>
              <field name="model_id"/>
              <field name="plate_number"/>
              <field name="serial_number"/>
              <field name="mileage"/>
              <field name="office_id"/>
              <field name="status"/>
            </group>

            <!-- <group string="Upcoming Maintenance" colspan="2" col="2"> -->
            <group>
              <field name="maintenance_due_ids" nolabel="1">
                <list decoration-danger="overdue" decoration-warning="is_due and not overdue">
                  <field name="service_type_id"/>
                  <field name="next_service_mileage"/>
                  <field name="next_service_date"/>
                  <field name="km_to_due"/>
                  <field name="days_to_due"/>
                </list>
              </field>
            </group>
          </group>

          <notebook>
            <page string="Maintenance log">
              <field name="maintenance_log_ids">
                <list>
                  <field name="date"/>
                  <field name="mileage"/>
                  <field name="note"/>
                  <field name="total_cost"/>
                </list>
              </field>
            </page>
          </notebook>

        </sheet>
      </form>
    </field>
  </record>


  <record model="ir.actions.act_window" id="rental.vehicle_window">
    <field name="name">Vehicle</field>
    <field name="res_model">rental.vehicle</field>
    <field name="view_mode">list,form</field>
  </record>

