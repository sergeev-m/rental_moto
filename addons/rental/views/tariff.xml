<odoo>
    <record id="rental_tariff_form" model="ir.ui.view">
        <field name="name">rental.tariff.form</field>
        <field name="model">rental.tariff</field>
        <field name="arch" type="xml">
            <form string="Tariff">
                <sheet>
                    <group>
                        <field name="office_id" options="{'no_create': False}"/>
                        <field name="vehicle_model_id"/>
                        <field name="period_type"/>
                        <field name="min_period"/>
                        <field name="price_per_unit"/>
                        <field name="currency_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="rental_tariff_list" model="ir.ui.view">
        <field name="name">rental.tariff.tree</field>
        <field name="model">rental.tariff</field>
        <field name="arch" type="xml">
            <list>
                <field name="office_id" optional="hide"/>
                <field name="vehicle_model_id"/>
                <field name="period_type"/>
                <field name="min_period"/>
                <field name="price_per_unit"/>
                <field name="currency_id" optional="hide"/>
            </list>
        </field>
    </record>

    <record id="rental_tariff_window" model="ir.actions.act_window">
        <field name="name">Tariffs</field>
        <field name="res_model">rental.tariff</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
